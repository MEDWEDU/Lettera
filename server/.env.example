# MongoDB Database Configuration
# Замените значения на ваши реальные настройки подключения к MongoDB

# MongoDB Connection URI
MONGODB_URI=mongodb://localhost:27017/lettera

# Для production используйте:
# MONGODB_URI=mongodb://username:password@localhost:27017/lettera?authSource=admin

# Connection Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Timeout Settings (в миллисекундах)
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_CONNECT_TIMEOUT=10000

# Retry Settings
DB_MAX_RETRIES=3

# S3/MinIO Configuration
# Настройки для загрузки медиафайлов
AWS_ACCESS_KEY=your_access_key
AWS_SECRET_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=lettera-media

# MinIO Support (for self-hosted development)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false

# File Upload Settings
MAX_IMAGE_SIZE=10485760  # 10MB
MAX_AUDIO_SIZE=2097152   # 2MB
MAX_VIDEO_SIZE=104857600 # 100MB

# Application Settings
NODE_ENV=development
PORT=3000

# Redis Configuration for Sessions and Caching
# Замените значения на ваши реальные настройки подключения к Redis

# Redis Connection URL
REDIS_URL=redis://localhost:6379

# Для production используйте:
# REDIS_URL=redis://username:password@localhost:6379

# Redis Connection Settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000
REDIS_CONNECT_TIMEOUT=5000

# TTL Settings (в секундах)
REDIS_EMAIL_CODE_TTL=600
REDIS_REFRESH_TOKEN_TTL=604800
REDIS_USER_STATUS_TTL=300